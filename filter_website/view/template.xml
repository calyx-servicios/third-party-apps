<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="products" name="template_name" inherit_id="website_sale.products">
            <xpath expr="//div[hasclass('products_pager')]//t//t[@t-set='_classes']" position="replace">
                <t t-set="_classes" t-valuef="w-100 mt-2"/>
            </xpath>
        </template>
        <template id="product" name="template_name" inherit_id="website_sale.product">
            <xpath expr="//p[hasclass('text-muted')]" position="replace">

            </xpath>
            <xpath expr="//h1" position="after">
                <p t-field="product.description_sale" class="text-muted description-p" placeholder="A short description that will also appear on documents." />
                <hr/>
            </xpath>
        </template>
        <template id="template_footer_centered" name="template_name" inherit_id="website.template_footer_centered">
            <xpath expr="//a[hasclass('s_share_linkedin')]" position="replace">
                <a href="/website/social/youtube" class="s_share_youtube" target="_blank">
                    <i class="fa fa-youtube rounded-circle rounded shadow-sm"/>
                </a>
            </xpath>
            <xpath expr="//h5[hasclass('s_share_title')]" position="after">
                <a href="/website/social/linkedin" class="s_share_linkedin icon-btn" target="_blank">
                    <i class="fa fa-linkedin rounded-circle rounded shadow-sm"/>
                </a>
            </xpath>
        </template>
        <template id="submenu" name="template_name" inherit_id="website.submenu">
            <xpath expr="//t[@t-set='has_visible_submenu']//li" position="after">
                <a t-att-href="/shop"
                t-att-class="nav-link btn-fill-primary btn-primary btn-lg"
                role="menuitem"
                t-ignore="true"
                t-att-target="'_blank' if submenu.new_window else None">
                <span t-field="submenu.name"/>
                </a>
            </xpath>
        </template>
    </data>
</odoo>
