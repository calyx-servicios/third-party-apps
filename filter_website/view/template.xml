<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="products" name="template_name" inherit_id="website_sale.products">
            <xpath expr="//div[hasclass('products_pager')]//t//t[@t-set='_classes']" position="replace">
                <t t-set="_classes" t-valuef="w-100 mt-2"/>
            </xpath>
        </template>
        <template id="product" name="template_name" inherit_id="website_sale.product">
            <xpath expr="//p[hasclass('text-muted')]" position="replace">

            </xpath>
            <xpath expr="//h1" position="after">
                <p t-field="product.website_description" class="text-muted description-p" placeholder="A short description that will also appear on documents." />
                <hr/>
            </xpath>
            <xpath expr="//div[hasclass('col-md-8')]//t[@t-call='website_sale.search']" position="replace">
                
            </xpath>
        </template>
        <template id="product_attributes_body" name="template_name" inherit_id="website_sale_comparison.product_attributes_body">
            <xpath expr="//h3" position="replace">
                <h3 class="text-center mb32">Ficha Tecnica de <t t-esc="product.name"/></h3>                
            </xpath>
        </template>
        
    </data>
</odoo>
