<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="products" name="template_name" inherit_id="website_sale.products">
            <xpath expr="//div[hasclass('products_pager')]//t//t[@t-set='_classes']" position="replace">
                <t t-set="_classes" t-valuef="w-100 mt-2"/>
            </xpath>
        </template>
        <template id="product" name="template_name" inherit_id="website_sale.product">
            <xpath expr="//p[hasclass('text-muted')]" position="replace">

            </xpath>
            <xpath expr="//h1" position="after">
                <p t-field="product.description_sale" class="text-muted description-p" placeholder="A short description that will also appear on documents." />
            </xpath>

        </template>
    </data>
</odoo>
