<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="products" name="template_name" inherit_id="website_sale.products">
            <xpath expr="//div[hasclass('products_pager')]//t//t[@t-set='_classes']" position="replace">
                <t t-set="_classes" t-valuef="w-100 mt-2"/>
            </xpath>
        </template>
        <template id="template_followup_report" name="template_name" inherit_id="website_sale.template_followup_report">
            <xpath expr="//t[@t-call='website_sale.product_price']" position="before">
                <div itemprop="description" t-field="product.website_description" class="oe_structure mt16" id="product_full_description"/>
            </xpath>
        </template>
    </data>
</odoo>
