<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_config_sign_form" model="ir.ui.view">
        <field name="model">config.sign</field>
        <field name="arch" type="xml">
            <form string="Type" create="false">
                <sheet>
                <h2>Contract Sign Configuration</h2>
                    <group>
                        <group>
                            <div class="col-12 col-lg-6 o_setting_box" title="Localiced Firm">
                                <label for="sign_position_a" string="Position"/>
                                <div class="text-muted">
                                    Select the position where the sign will be added
                                </div>
                                <div>
                                    <field name="sign_position_a" class="oe_inline" style="width: 20% !important;"/>
                                        &#x2063; &#x2063;
                                    <field name="sign_position_b" class="oe_inline" style="width: 20% !important;"/>
                                        &#x2063; &#x2063;
                                    <field name="sign_position_c" class="oe_inline" style="width: 20% !important;"/>
                                        &#x2063; &#x2063;
                                    <field name="sign_position_d" class="oe_inline" style="width: 20% !important;"/>
                                </div>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_config_sign_tree" model="ir.ui.view">
        <field name="name">Sign Configuration</field>
        <field name="model">config.sign</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="create_date" string="Created"/>
                <field name="write_date" string="Last Edited"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_config_sign_view">
        <field name="name">Sign Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">config.sign</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_config_sign_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to set a new Firm Configuration.</p>
        </field>
    </record>

    <menuitem id="menu_config_sign" parent="hr.menu_human_resources_configuration" action="action_config_sign_view" groups="hr.group_hr_manager"/>

</odoo>