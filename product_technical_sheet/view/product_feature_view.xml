<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_template_form_feactures" model="ir.ui.view">
        <field name="name">product form view: add feactures</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="tech sheet" string="Technical Sheet Product">
                    <group string="Technical Sheet Product">
                       <field name="pdf_tyc" string="Attach Data Sheet" />
                       <field name="website_default" string="Website Default" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
