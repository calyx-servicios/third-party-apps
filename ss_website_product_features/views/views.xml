<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>



		<record model="ir.ui.view" id="product_template_tech_features">
			<field name="name">product_template_tech_features</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//notebook/page[3]" position="after">
					<page name="Technical Features" string="Technical Features">
						<group>
							<field name="feature_ids" nolabel='1'>
								<tree>
									<field name="name"></field>
									<field name="desc"></field>
								</tree>
								<form>
									<group>
										<field name="name"></field>
										<field name="desc"></field>
									</group>
								</form>
							</field>
						</group>

					</page>
				</xpath>
			</field>
		</record>





		<record model="ir.ui.view" id="product_template_tech_features2">
			<field name="name">product_template_tech_features2</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//notebook/page[3]" position="after">
					<page name="Technical Features" string="Technical Features">
						<group>
							<field name="feature_ids" nolabel='1'>
								<tree>
									<field name="name"></field>
									<field name="desc"></field>
								</tree>
								<form>
									<group>
										<field name="name"></field>
										<field name="desc"></field>
									</group>
								</form>
							</field>
						</group>

					</page>
				</xpath>
			</field>
		</record>





		<record id="view_feature_feature_tree" model="ir.ui.view">
			<field name="name">feature.feature_tree</field>
			<field name="model">feature.feature</field>
			<field name="arch" type="xml">
				<tree string="Product Feature/Specification Names" editable="bottom">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="action_product_attr" model="ir.actions.act_window">
			<field name="name">Product Feature/Specification Names</field>
			<field name="res_model">feature.feature</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem id="menu_product_attr" action="action_product_attr"
			name="Product Features and Specification" parent="sale.menu_sale_config"
			sequence="111" />








		<template id="products_features" inherit_id="website_sale.product"
			name="Product Features">
			<xpath expr="//section[@id='product_detail']" position="after">

				<t t-if="product.sudo().feature_ids">

					<div
						style='width: 64%; margin-left: 9%; margin-bottom: 50px; color: #7e8185;'>
						<h3 style="color: #7c7bad; ">Technical Features and
							Specifications
						</h3>
						<hr />
						<table class="table rounded mb-0 bg-white o_portal_my_doc_table">
							<t t-raw="0" />
							<t t-foreach="product.sudo().feature_ids" t-as="f">
								<tr style='line-height: 2px;'>
									<th style="border-top: none; border-bottom: 0.5px solid #e9ecef; ">
										<t t-esc="f.name.name" />
									</th>
									<td style="border-top: none; border-bottom: 0.5px solid #e9ecef; ">
										<t t-esc="f.desc" />
									</td>
								</tr>
							</t>

						</table>
					</div>
				</t>
			</xpath>
		</template>



	</data>


</odoo>



